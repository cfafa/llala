import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='/', intents=intents)


@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')


@bot.command()
async def hello(ctx):
    await ctx.send(f'Привет! Я бот(потом придумаем), который поможет вам найти ближайшие центры переработки мусора, а также расскажет как правильно сортировать мусор{bot.user}')
    await ctx.send(f'Напишите 1, если хотите узнать, где ближайший центр переработки. 2, если хотите узнать, как правильно сортировать мусор')


if 
    @bot.command()
    async def function(ctx):
        await ctx.send(f'Наши услуги доступны на территории СНГ: Россия: Москвы, Санкт-Петербурга, Екатеринбурга, Сочи; Казахстан: Алма-Ата, Астана; (ну дальше придумаем).  Напишите свой город, если он есть в этом списке')





#инструкция как правильно сортировать мусор
if 
    @bot.command()
    async def instruction(ctx):
        await ctx.send




bot.run("token")
